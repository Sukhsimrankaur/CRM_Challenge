<div class="box">
  <article class="media">
    <figure class="media-left">
      <% if customer.image.attached? %>
        <p class="image is-64x64">
          <%= image_tag customer.image.variant(resize_to_limit: [64, 64]), alt: customer.full_name %>
        </p>
      <% else %>
        <p class="image is-64x64">
          <%= image_tag 'placeholder.png', alt: 'No image' %>
        </p>
      <% end %>
    </figure>
    <div class="media-content">
      <div class="content">
        <p>
          <strong><%= customer.full_name %></strong><br>
          <small><%= customer.email_address.presence || "No email provided" %></small><br>
          <small><%= customer.phone_number.presence || "No phone number" %></small><br>
          <%= simple_format(customer.notes) if customer.notes.present? %>
        </p>
      </div>
    </div>
  </article>
</div>
